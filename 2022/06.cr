require "spec"

class ElfComms
  def initialize
  end

  def signal_start(input)
    marker = input
      .chars
      .each_cons(4)
      .find { |x| x.uniq.size == 4 }

    (input.index(marker.try &.join || "") || -5) + 4
  end

  def message_start(input)
    marker = input
      .chars
      .each_cons(14)
      .find { |x| x.uniq.size == 14 }

    (input.index(marker.try &.join || "") || -15) + 14
  end
end

describe "Day 6: Tuning Trouble" do
  it "executes the demo" do
    input = "mjqjpqmgbljsphdztnvjfqwrcgsmlb"

    comms = ElfComms.new
    comms.signal_start(input).should eq(7)
    comms.message_start(input).should eq(19)
  end

  it "executes the full input" do
    input = ""

    comms = ElfComms.new
    comms.signal_start(input).should eq(1909)
    comms.message_start(input).should eq(3380)
  end
end
